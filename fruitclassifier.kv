# fruitsclassifier.kv

<ImageClassifierApp>:
    GridLayout:
        cols: 1
        spacing: 10
        padding: 10

        # Input elements (folder input and select folder button)
        GridLayout:
            cols: 2
            spacing: 10
            size_hint_y: None
            height: 50

            TextInput:
                hint_text: "Enter folder path or tap 'Select Folder'"
                id: folder_input

            Button:
                text: "Select Folder"
                on_release: root.select_folder()

        # Output elements (result label)
        Label:
            id: result_label

        # "Predict" button in a separate BoxLayout
        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            size_hint_y: None
            height: 50

            Button:
                text: "Predict"
                on_release: root.predict_images_in_folder()

